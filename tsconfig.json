{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
