{
  "name": "PoliTopics Monorepo",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "workspace",
  "workspaceFolder": "/workspaces/PoliTopics",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "pnpm": "latest"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.9.5"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "hashicorp.terraform",
        "bierner.markdown-preview-github-styles",
        "amazonwebservices.aws-toolkit-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terraform.languageServer": {
          "external": true
        }
      }
    }
  },
  "forwardPorts": [3333, 4000, 4566, 8001],
  "postCreateCommand": [
    "chmod +x .devcontainer/post-create.sh",
    ".devcontainer/post-create.sh"
  ],
  "remoteEnv": {
    "AWS_REGION": "ap-northeast-3",
    "AWS_DEFAULT_REGION": "ap-northeast-3",
    "AWS_ACCESS_KEY_ID": "test",
    "AWS_SECRET_ACCESS_KEY": "test",
    "AWS_ENDPOINT_URL": "http://localstack:4566",
    "LOCALSTACK_URL": "http://localstack:4566",
    "POLITOPICS_TABLE": "politopics-localstack",
    "POLITOPICS_ARTICLE_BUCKET": "politopics-articles-local",
    "LLM_TASK_TABLE": "politopics-llm-tasks-local",
    "ERROR_BUCKET": "politopics-data-collection-errors-local",
    "RUN_API_KEY": "local-dev"
  }
}
